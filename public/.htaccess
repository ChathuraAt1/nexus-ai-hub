# Disable MultiViews to avoid unexpected content negotiation
Options -MultiViews

# SPA fallback: rewrite all non-file/directory requests to /index.html
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Do not rewrite requests for existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Rewrite everything else to index.html
  RewriteRule ^ /index.html [L]
</IfModule>

# Optional: fallback resource for Apache 2.2+
<IfModule mod_dir.c>
  FallbackResource /index.html
</IfModule>
